using System.ComponentModel.Design;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int numberEnd = 0;
            string start = "";
            string lucky = "";
            string bai = "";
            string burger = "";
            string ds = "";
            string roblox = "";
            string goodDay = "";
            string punish = "";
            while (true)
            {
                Console.WriteLine("Начать новую игру(G) или выйти посмотреть статистику?(S)");
                start = Console.ReadLine().ToUpper();
                if (start == "S")
                    Console.WriteLine("Вы нашли {0} из 7 концовок", numberEnd);
                else if (start == "G")
                {
                    string kolleg = "";
                    string fast = "";
                    string sleep = "";
                    string eda = "";
                    string breakfast = "";
                    string transport = "";
                    string homework = "";
                    string teacher = "";
                    string phone = "";
                    string mom = "";
                    string computer = "";
                    string alarm = "";
                    string clothes = "";
                    string shower = "";
                    string friends = "";
                    string money = "";
                    string weather = "";
                    string health = "";
                    string games = "";
                    string study = "";
                    string food = "";

                    // Интеракция 1
                    Console.WriteLine("Вы проснулись в 6:00 утра");
                    Console.WriteLine("Проснуться сразу или поставить будильник еще на 10 минут?");
                    Console.WriteLine("Y - проснуться сразу | N - поспать еще 10 минут");
                    alarm = Console.ReadLine().ToUpper();

                    if (alarm == "Y")
                    {
                        Console.WriteLine("Вы бодро встали с постели");
                    }
                    else
                    {
                        Console.WriteLine("Вы проспали еще 10 минут и встали в 6:10");
                    }

                    // Интеракция 2
                    Console.WriteLine("Принять душ или одеться сразу?");
                    Console.WriteLine("Y - принять душ | N - одеться сразу");
                    shower = Console.ReadLine().ToUpper();

                    // Интеракция 3
                    Console.WriteLine("Какую одежду надеть?");
                    Console.WriteLine("Y - формальную | N - повседневную");
                    clothes = Console.ReadLine().ToUpper();

                    // Интеракция 4
                    Console.WriteLine("Идти ли мне сегодня в колледж...");
                    Console.WriteLine("Y - идти в колледж | N - не идти в колледж");
                    string Answer = Console.ReadLine().ToUpper();

                    if (Answer == "Y")
                    {
                        kolleg = "da";

                        // Интеракция 5
                        Console.WriteLine("Вы решили идти в колледж");
                        Console.WriteLine("Что приготовить на завтрак?");
                        Console.WriteLine("Y - яичницу | N - бутерброды");
                        breakfast = Console.ReadLine().ToUpper();

                        // Интеракция 6
                        Console.WriteLine("Съев завтрак вы посмотрели на часы и увидели 7:00");
                        Console.WriteLine("*В колледже нужно быть через час, а дорога занимает 1 час и 30 минут*");
                        Console.WriteLine("Поторопиться ли мне и не взять портфель что-бы успеть вовремя?");
                        Console.WriteLine("Y - поторопиться и не брать портфель | N - не торопиться и собрать портфель");
                        fast = Console.ReadLine().ToUpper();
                    }
                    else if (Answer == "N")
                    {
                        kolleg = "net";

                        // Интеракция 7
                        Console.WriteLine("Вы решили не идти в колледж и остались лежать в постеле");
                        Console.WriteLine("Чем заняться в телефоне?");
                        Console.WriteLine("Y - тик-ток | N - ютуб");
                        phone = Console.ReadLine().ToUpper();

                        // Интеракция 8
                        Console.WriteLine("Вдруг усталость нахлынула на вас, ложиться ли спать?");
                        Console.WriteLine("Y - Убрать телефон и лечь спать | N - продолжить листать тик-ток");
                        sleep = Console.ReadLine().ToUpper();
                    }
                    else
                    {
                        Console.WriteLine("Пожалуйста введитите только Y или N.");
                        return;
                    }

                    if (kolleg == "da")
                    {
                        if (fast == "Y")
                        {
                            // Интеракция 9
                            Console.WriteLine("На чем поехать в колледж?");
                            Console.WriteLine("Y - на маршрутке | N - на такси");
                            transport = Console.ReadLine().ToUpper();

                            // Интеракция 10
                            Console.WriteLine("Вы добежали до остановки и доехали до метро");
                            Console.WriteLine("В метро предложили помощь с учебой, согласиться?");
                            Console.WriteLine("Y - да | N - нет");
                            study = Console.ReadLine().ToUpper();

                            Console.WriteLine("Время 7:55, вы успели прийти в колледж");
                            Console.WriteLine("Зайдя в кабинет вы вспомнили, что не взяли с собой портфель");
                            Console.WriteLine("*Первая пара Александра Сергеевича Рыбакова*");
                            Console.WriteLine("Вы забыли домашнее задание дома");

                            // Интеракция 11
                            Console.WriteLine("Сказать правду преподавателю или придумать оправдание?");
                            Console.WriteLine("Y - сказать правду | N - придумать оправдание");
                            homework = Console.ReadLine().ToUpper();

                            Console.WriteLine("Пара началась, Александр Сергеевич Рыбаков проверяет д/з");
                            Console.WriteLine("Очередь доходит до вас, он видит, что вы не сделали д/з");

                            if (homework == "Y")
                            {
                                Console.WriteLine("Вы честно рассказали ситуацию, преподаватель дал шанс исправиться");
                                Console.WriteLine("Он уходит проверять другие д/з у других ребят");
                                Console.WriteLine("Концовка: Ооо повезло повезло");
                                if (lucky == "Y") continue;
                                else
                                {
                                    lucky = "Y";
                                    numberEnd += 1;
                                }
                            }
                            else
                            {
                                Console.WriteLine("Вы придумали оправдание, но преподаватель не поверил");
                                Console.WriteLine("Он прописывает вам print(*пока дура*) и 2 в журнал");
                                Console.WriteLine("Концовка: Пока дура");
                                if (bai == "Y") continue;
                                else
                                {
                                    bai = "Y";
                                    numberEnd += 1;
                                }
                            }

                        }
                        else if (fast == "N")
                        {
                            // Интеракция 12
                            Console.WriteLine("Ты неспеша доел завтрак и собрали портфель с д/з");
                            Console.WriteLine("Посмотреть погоду перед выходом?");
                            Console.WriteLine("Y - да | N - нет");
                            weather = Console.ReadLine().ToUpper();

                            // Интеракция 13
                            Console.WriteLine("Вы дошли до остановки и маршрутка уехала без вас");
                            Console.WriteLine("Ждать следующую или пойти пешком?");
                            Console.WriteLine("Y - ждать | N - идти пешком");
                            transport = Console.ReadLine().ToUpper();

                            Console.WriteLine("Время 9:30, вы опоздали в колледж");
                            Console.WriteLine("*Первая пара Александра Сергеевича Рыбакова*");
                            Console.WriteLine("Вы извинились за опозданиие и сели за парту");

                            // Интеракция 14
                            Console.WriteLine("Друзья предлагают сходить в столовую вместо пары, согласиться?");
                            Console.WriteLine("Y - да | N - нет");
                            friends = Console.ReadLine().ToUpper();

                            if (friends == "Y")
                            {
                                Console.WriteLine("Вы пошли с друзьями в столовую и пропустили пару");
                            }
                            else
                            {
                                // Интеракция 15
                                Console.WriteLine("Конец пары, попросить у преподователя проверить д/з или пойти на обед?");
                                Console.WriteLine("Y - показать домашку и опоздать на обед| N - забить на домашку и пойти на обед");
                                eda = Console.ReadLine().ToUpper();
                            }
                        }

                        if (eda == "Y")
                        {
                            // Интеракция 16
                            Console.WriteLine("Вы показали домашнее задание");
                            Console.WriteLine("Александр Сергеевич Рыбаков проверил ваше домашнее задание, поставил вам *король одобряет* вы счастливы");
                            Console.WriteLine("Вы спустились вниз и увидели большую очередь на обед");
                            Console.WriteLine("Ждать в очереди или купить еду в автомате?");
                            Console.WriteLine("Y - ждать в очереди | N - купить в автомате");
                            money = Console.ReadLine().ToUpper();

                            Console.WriteLine("Концовка: Без бургера :с");
                            if (burger == "Y") continue;
                            else
                            {
                                burger = "Y";
                                numberEnd += 1;
                            }
                        }
                        else if (eda == "N")
                        {
                            // Интеракция 17
                            Console.WriteLine("Вы решили не показывать домашнее задание и побежали на обед");
                            Console.WriteLine("Что взять на обед?");
                            Console.WriteLine("Y - бургер | N - салат");
                            food = Console.ReadLine().ToUpper();

                            Console.WriteLine("Вы скушали еду и вам стало плохо. Еда была плохой");
                            Console.WriteLine("Концовка: Лучше бы показал домашку");
                            if (ds == "Y") continue;
                            else
                            {
                                ds = "Y";
                                numberEnd += 1;
                            }
                        }
                    }
                    else if (kolleg == "net")
                    {
                        if (sleep == "Y")
                        {
                            // Интеракция 18
                            Console.WriteLine("В комнату зашла мама и увидела как вы спите");
                            Console.WriteLine("Разбудить вас или дать поспать?");
                            Console.WriteLine("Y - разбудить | N - дать поспать");
                            mom = Console.ReadLine().ToUpper();

                            if (mom == "Y")
                            {
                                Console.WriteLine("Мама разбудила вас и заставила делать домашние дела");
                            }
                            else
                            {
                                Console.WriteLine("Мама решила вас не будить и вы проспали до утра");
                            }

                            Console.WriteLine("Вы проснулись в 12:00");

                            // Интеракция 19
                            Console.WriteLine("Включить компьютер или заняться чем-то полезным?");
                            Console.WriteLine("Y - включить компьютер | N - заняться полезным");
                            computer = Console.ReadLine().ToUpper();

                            if (computer == "Y")
                            {
                                Console.WriteLine("Вы включили компьютер");
                                Console.WriteLine("Во что поиграть?");
                                Console.WriteLine("Y - роблокс | N - другие игры");
                                games = Console.ReadLine().ToUpper();

                                Console.WriteLine("Концовка: Ура роблокс");
                                if (roblox == "Y") continue;
                                else
                                {
                                    roblox = "Y";
                                    numberEnd += 1;
                                }
                            }
                            else
                            {
                                Console.WriteLine("Вы занялись саморазвитием");
                                Console.WriteLine("Концовка: Полезный день");
                                if (goodDay == "Y") continue;
                                else
                                {
                                    goodDay = "Y";
                                    numberEnd += 1;
                                }
                            }
                        }
                        else if (sleep == "N")
                        {
                            // Интеракция 20
                            Console.WriteLine("Вы дальше сидите в телефоне");
                            Console.WriteLine("Появилось сообщение от друга, ответить?");
                            Console.WriteLine("Y - да | N - нет");
                            friends = Console.ReadLine().ToUpper();

                            Console.WriteLine("В комнату заходит мама");
                            Console.WriteLine("Она на вас кричит");

                            // Интеракция 21
                            Console.WriteLine("Извиниться или спорить?");
                            Console.WriteLine("Y - извиниться | N - спорить");
                            mom = Console.ReadLine().ToUpper();

                            if (mom == "Y")
                            {
                                Console.WriteLine("Вы извинились и мама смягчила наказание");
                                Console.WriteLine("Без компьютера 2 недели");
                            }
                            else
                            {
                                Console.WriteLine("Вы начали спорить и ситуация ухудшилась");
                                Console.WriteLine("Вы были наказаны, без компьютера 1 месяц");
                            }

                            Console.WriteLine("Концовка: Наказан");
                            if (punish == "Y") continue;
                            else
                            {
                                punish = "Y";
                                numberEnd += 1;
                            }
                        }
                    }
                    start = "";
                }
                else Console.WriteLine("Напиши только S или G");
            }
        }
    }
}
